!!!
%html
  %head
    %meta{charset: "UTF-8"}
    %title
      DataMelon#{': ' + current_article.title unless current_article.nil?}
    %link{rel: 'stylesheet', type: 'text/css', href: "http://cdnjs.cloudflare.com/ajax/libs/foundation/5.5.1/css/foundation.css"}
    = stylesheet_link_tag 'style'
    = stylesheet_link_tag 'blog'
    %link{:href => "http://fonts.googleapis.com/css?family=Nunito:400,700,300", :rel => "stylesheet", :type => "text/css"}/
    %link{href: "/stylesheets/syntax.css", rel: "stylesheet", type: "text/css"}
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-59161926-1', 'auto');
      ga('send', 'pageview');
    %script{:src => "https://mailtoninja-kickstrap.netdna-ssl.com/js/v0/mailto.ninja.js", :type => "text/javascript"}
    - unless current_page.path == "index.html"
      :css
        .row{max-width: none;}
  %body
    / page
    .top-thing
      .nav-bar
        .row
          .small-12.medium-4.large-6.columns.namelogo
            %a{href: 'http://www.datamelon.io'}
              = link_to image_tag("logo.png"), '/'
          .small-12.medium-8.large-6.columns
            %ul.top-nav
              %li
                %a{:href => "/#services"} Services
              %li
                %a{:href => "/#team"} Team
              %li
                %a{:href => "/#about"} About
              %li
                %a{:href => "/blog"} Blog
              %li
                %a{:href => "/#contact"} Contact
      - if current_page.path == "index.html"
        .hero
          .row
            .large-12.columns.intro-text
              %h1 Custom Business Software and Support

    .row
